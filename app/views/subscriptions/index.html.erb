<div class="container py-4">
  <!-- Add Subscription Button -->
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1>My Subscriptions</h1>
    <div>
      <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addSubscriptionModal">
        Add New Subscription
      </button>
    </div>
  </div>

  <!-- Pagination Info -->
  <div class="d-flex justify-content-between align-items-center mb-3">
    <div class="text-muted">
      Showing <%= @pagy.from %>-<%= @pagy.to %> of <%= @pagy.count %> subscriptions
    </div>
    <div class="text-muted">
      Page <%= @pagy.page %> of <%= @pagy.pages %>
    </div>
  </div>

  <!-- Subscriptions Grid -->
  <div class="row">
    <% @subscriptions.each do |subscription| %>
      <div class="col-md-12 mb-2">
        <div class="card subscription-card py-2">
          <div class="card-body d-flex">
            <div class="d-flex flex-column flex-grow-1">
              <h5 class="card-title fs-2"><%= subscription.name %></h5>
              <p class="card-text">
                <strong>Category:</strong> <%= subscription.category&.name || 'Uncategorized' %><br>
                <strong>Amount:</strong> $<%= number_with_precision(subscription.price, precision: 2) %><br>
                <strong>Billing:</strong> <%= subscription.billing_cycle %><br>
                <strong>Next Payment:</strong> <%= subscription.next_payment_date&.strftime("%B %d, %Y") %>
              </p>
            </div>
            <div class="d-flex flex-column justify-content-end ms-3">
              <div class="btn-group float-end">
                <button class="btn-icon text-primary border-0 bg-transparent" data-bs-toggle="modal" data-bs-target="#editSubscriptionModal_<%= subscription.id %>" aria-label="Edit Subscription">
                  <i class="bi bi-pencil-square fs-2"></i>
                </button>
                <%= button_to subscription_path(subscription), 
                    method: :delete, 
                    class: "btn-icon text-primary border-0 bg-transparent btn-danger",
                    form: { data: { turbo_confirm: 'Are you sure?' } } do %>
                  <i class="bi bi-trash fs-2" style="color: red;"></i>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Edit Modal for each subscription -->
      <div class="modal fade" id="editSubscriptionModal_<%= subscription.id %>" tabindex="-1">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title">Edit Subscription</h5>
              <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div 
              data-controller="subscription-form"
              data-subscription-form-categories-value="<%= Category.alphabetical.select(:id, :name).to_json %>"
              data-subscription-form-subscription-value="<%= { id: subscription.id, name: subscription.name, category_id: subscription.category_id, price: subscription.price, billing_cycle: subscription.billing_cycle, next_payment_date: subscription.next_payment_date, notification_days_before: subscription.notification_days_before }.to_json %>"
              data-subscription-form-is-edit-value="true"
            ></div>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <!-- Pagination Controls -->
  <div class="d-flex justify-content-center mt-4">
    <%== pagy_bootstrap_nav(@pagy) if @pagy.pages > 1 %>
  </div>

  <!-- Add Subscription Modal -->
  <div class="modal fade" id="addSubscriptionModal" tabindex="-1">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Add New Subscription</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
        </div>
        <div 
          data-controller="subscription-form"
          data-subscription-form-categories-value="<%= Category.alphabetical.select(:id, :name).to_json %>"
          data-subscription-form-is-edit-value="false"
        ></div>
      </div>
    </div>
  </div>
</div>