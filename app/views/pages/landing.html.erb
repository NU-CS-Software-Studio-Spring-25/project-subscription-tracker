<!-- Hero Section -->
<section class="bg-white text-dark text-center py-5">
  <div class="container">
    <h1 class="display-4">Take Control of Your Subscriptions</h1>
    <p class="lead">Track all your recurring subscriptions in one place. Get insights, set budgets, and never miss a payment again.</p>
    <%= link_to "Start Tracking - It's Free", new_user_registration_path, class: 'btn btn-primary btn-lg mt-3' %>
  </div>
</section>

<!-- Features -->
<section id="features" class="py-5">
  <div class="container">
    <h2 class="text-center mb-4">Everything You Need to Manage Subscriptions</h2>
    <div class="row g-4">
      <div class="col-md-4">
        <div class="card h-100 text-center">
          <div class="card-body">
            <i class="bi bi-list-check text-primary display-4 mb-3"></i>
            <h5 class="card-title">Track All Subscriptions</h5>
            <p class="card-text">Add all your subscriptions with pricing, billing cycles, and payment dates. See your complete subscription portfolio at a glance.</p>
          </div>
        </div>
      </div>
      <div class="col-md-4">
        <div class="card h-100 text-center">
          <div class="card-body">
            <i class="bi bi-graph-up text-info display-4 mb-3"></i>
            <h5 class="card-title">Price Analysis</h5>
            <p class="card-text">Compare your subscription prices with community data. See if you're paying above or below average with detailed percentile rankings.</p>
          </div>
        </div>
      </div>
      <div class="col-md-4">
        <div class="card h-100 text-center">
          <div class="card-body">
            <i class="bi bi-piggy-bank text-success display-4 mb-3"></i>
            <h5 class="card-title">Budget by Category</h5>
            <p class="card-text">Set spending limits for different subscription categories like streaming, productivity, or fitness. Track your progress and stay on budget.</p>
          </div>
        </div>
      </div>
    </div>
    
    <!-- Second row of features -->
    <div class="row g-4 mt-4">
      <div class="col-md-4">
        <div class="card h-100 text-center">
          <div class="card-body">
            <i class="bi bi-bell text-warning display-4 mb-3"></i>
            <h5 class="card-title">Payment Reminders</h5>
            <p class="card-text">Get notified before your subscriptions renew. Set custom reminder periods so you never get surprised by unexpected charges.</p>
          </div>
        </div>
      </div>
      <div class="col-md-4">
        <div class="card h-100 text-center">
          <div class="card-body">
            <i class="bi bi-calendar-event text-secondary display-4 mb-3"></i>
            <h5 class="card-title">Billing Cycle Insights</h5>
            <p class="card-text">Analyze whether monthly or yearly billing saves you money. Make informed decisions about your subscription payment schedules.</p>
          </div>
        </div>
      </div>
      <div class="col-md-4">
        <div class="card h-100 text-center">
          <div class="card-body">
            <i class="bi bi-tags text-danger display-4 mb-3"></i>
            <h5 class="card-title">Organize by Categories</h5>
            <p class="card-text">Group subscriptions into categories like Entertainment, Productivity, or Health. See where your money goes and compare spending patterns.</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

